/* pages/control/control.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.my-btn{
  border-radius: 8rpx;
}
.my-btn:active{
  background-color: #e9eaec;
  color: black;
}
.video-view{
  width: 90%;
  margin: 20rpx auto;
}
.video-img{
  width: 600rpx;
  height: 338rpx;
}
.video-view-tip-img{
  width: 40rpx;
  height: 40rpx;
}
.content-view{
  width: 96%;
  margin: 20rpx auto;
}
.daozha-cu-bar{
  border-bottom: 1rpx solid #dddee1;
}
.daozha-view{
  width: 96%;
  margin: 0rpx auto;
  padding: 10rpx 0rpx;
}
.daozha-view-img{
  width: 60rpx;
  height: 60rpx;
}
.daozha-view-text{
  text-overflow: ellipsis;
	white-space: nowrap;
  overflow: hidden;
}
.daozha-view-button{
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-left: 10rpx;
}
.in-out-view{
  padding: 20rpx;
  border: 1rpx solid #dddee1;
}
.changepw-input{
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx auto;
  padding: 5rpx 10rpx;
  border: 1rpx solid #808695;
  border-radius: 999rpx;
  color: #808695;
}
.changepw-input-select{
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin: 10rpx auto;
  padding: 5rpx 10rpx;
  border: 4rpx solid #1296db;
  border-radius: 999rpx;
  color: #1296db;
}
.control-item-view{
  height: 80rpx;
  padding: 10rpx 20rpx 10rpx;
  margin: 10rpx 0rpx;
  border-bottom: 1rpx solid #e9eaec;
}
.number-input-view{
  width: 80rpx;
  border: 1rpx solid #dddee1;
  text-align: center;
}
.number-input-view:hover{
  border: 1rpx solid #2d8cf0;
}
.change-btn{
  background-color: #19be6b;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  color: white;
  margin-left: 10rpx;
}
.change-btn:active{
  background-color: #e9eaec;
  color: black;
}